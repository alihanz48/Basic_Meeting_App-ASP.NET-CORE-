@{
    ViewBag.title = "Toplantı listesi";
}
@model List<UserInfo>
<main class="text-center">

    <h1 class="h4">Toplantı katılım listesi</h1>
    <table class="table table-bordered">
        <thead>
            <tr>
                <td>Ad</td>
                <td>katılım Durumu</td>
                <td>Detay</td>
            </tr>
        </thead>
        <tbody>
            @{
                int i=0;
            }

            @foreach(var user in  Model){
                var durum=user.willattend==true?"Evet":"Hayır";
                var className=user.willattend==true?"table-success":"table-danger";

                if(user.willattend==true){
                   i++;
                }

               <tr class="@className">
                <td>@user.name</td>
                <td>@durum</td>
                <td>
                    <a class="btn btn-primary" href="/meeting/details/@user.id">Detay</a>
                </td>
             </tr>
            }

        </tbody>
    </table>
    <div class="card">
        <div class="card-body">
            <span>Katılımcı sayısı : @i</span>
        </div>
    </div>
</main>